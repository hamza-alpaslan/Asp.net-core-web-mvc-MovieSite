@model IEnumerable<Movie>
@if (Model.Count() == 0)
{
    <h3 style="color:white">No movies found</h3>
}

<div class="row row-cols-1 row-cols-md-2 g-4">

    @foreach(var m in Model)
    {
        <div class="col">
            <div class="card text-bg-dark mb-3" onclick="location.href='/Home/Details/@m.Id';">
            <div class="row">
                    <div class="col-md-4">
                        <img src="~/img/@m.ImgURL" class="img-fluid rounded-start">
                    </div>
                <div class="col-sm-8">
                    <div class="card-body">
                            <h5 class="card-title">@m.Name</h5>
                            <p class="card-text"><small style="color:lightgrey;  user-select: none">Click for more details</small></p>
                        </div>
                </div>
            </div>
            </div>
        </div>
    }
</div>